# EditorConfig is awesome: https://EditorConfig.org.

# top-most EditorConfig file.
root = true

# Unix-style newlines with a newline ending every file.
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation.
[*.java]
charset = utf-8
indent_style = space
indent_size = 4

# 4 space indentation.
[*.kt]
charset = utf-8
indent_style = space
indent_size = 4

# Indentation override for all json under data/configs/directory.
[data/configs/*.json]
charset = utf-8
indent_style = space
indent_size = 2